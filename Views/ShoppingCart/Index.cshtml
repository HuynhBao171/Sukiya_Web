@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCard.cshtml";
}

<br />
<br />
<br />
<br />
<br />

<div class="inner-column">
    <h1 style="padding: 30px; text-align: center; "><span>Thông tin giỏ hàng</span></h1>
</div>
<hr />
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td> Tên món </td>
        <td> Ảnh bìa </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.TenMon </td>
            <td><img src="@item.HinhAnh" style="flex:auto; width: 300px; height: 300px" /></td>
            @using (Html.BeginForm("UpdateCart", "ShoppingCart", new { id = item.MaMon }))
            {
                <td>
                    <input type="number" min="1" name="txtQuantity" value="@item.SoLuong" style="" />
                </td>
                <td> @String.Format("{0:0,0}", item.Gia) </td>
                <td> @String.Format("{0:0,0}", item.SoLuong) </td>
                <td><a href="@Url.Action("Details","Mons",new { id = item.MaMon })" class="btn btn-primary"> Chi tiết </a></td>
                <td> @Html.ActionLink("Xóa", "RemoveCartItem", new { id = item.MaMon })</td>
                <td> <input type="submit" value="Cập nhật" style="height: 50px; width: 150px; background-color: green; color:white; padding-bottom: 5px; padding-top:5px"/></td>
            }
        </tr>
    }

    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="5"> Số lượng món:  @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9" align="center" style="padding: 30px; ">
            @Html.ActionLink("Xóa Giỏ Hàng", "RemoveCart")
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9" align="center" style="padding: 50px; ">
            @Html.ActionLink("ĐẶT HÀNG", "Order", "ShoppingCart")
        </td>
    </tr>
</table>

